# Production Environment Configuration
# IMPORTANT: DO NOT COMMIT THIS FILE WITH REAL VALUES
# Use AWS Secrets Manager, Azure Key Vault, or similar for production secrets

NODE_ENV=production

# Application
APP_PORT=3000
APP_NAME=Maintenance Automation Platform
API_PREFIX=/api/v1
API_VERSION=1

# Database (Use managed RDS/Cloud SQL)
DB_HOST=your-production-db-host.rds.amazonaws.com
DB_PORT=5432
DB_NAME=maintenance-db
DB_USER=prod_user
DB_PASSWORD=${DB_PASSWORD_FROM_SECRETS_MANAGER}
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SSL_ENABLED=true

# JWT (MUST use strong secrets from secrets manager)
JWT_SECRET=${JWT_SECRET_FROM_SECRETS_MANAGER}
JWT_EXPIRATION=1h
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET_FROM_SECRETS_MANAGER}
JWT_REFRESH_EXPIRATION=7d

# Redis (Use ElastiCache or similar)
REDIS_HOST=your-redis-cluster.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD_FROM_SECRETS_MANAGER}
REDIS_TTL=3600
REDIS_ENABLED=true

# CORS (Restrict to your production domains)
CORS_ORIGIN=https://app.yourdomain.com,https://admin.yourdomain.com

# File Upload (Use S3 or similar)
MAX_FILE_SIZE=10485760
UPLOAD_DEST=s3://your-bucket-name/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Logging (Use CloudWatch, DataDog, etc.)
LOG_LEVEL=info
LOG_PRETTY_PRINT=false

# Rate Limiting (Adjust based on your needs)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Email (Use SES, SendGrid, etc.)
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USER=${SMTP_USER_FROM_SECRETS_MANAGER}
SMTP_PASSWORD=${SMTP_PASSWORD_FROM_SECRETS_MANAGER}
EMAIL_FROM=noreply@yourdomain.com

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Feature Flags
ENABLE_SWAGGER=false
ENABLE_METRICS=true
ENABLE_DEBUG_ROUTES=false

# AWS (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_S3_BUCKET=your-bucket-name

# Monitoring
SENTRY_DSN=${SENTRY_DSN_FROM_SECRETS_MANAGER}
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}
